<uc:BaseUserControl x:Class="Organizer.Views.DailyChoresView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:uc="clr-namespace:Organizer.UserControls"
             xmlns:local="clr-namespace:Organizer.Views"
             xmlns:vms="clr-namespace:Organizer.ViewModels"
             xmlns:ucvms="clr-namespace:Organizer.UserControls.ViewModels"
             xmlns:ucvs="clr-namespace:Organizer.UserControls.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        
        <StackPanel>
            
            <Label Foreground="Wheat"
               Content="There will by daily chores here"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               FontSize="30"/>

            <ItemsControl x:Name="DailyChoresItemsControl" 
                                  ItemsSource="{Binding DailyChores, Mode=TwoWay}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>

                        <ucvs:DailyChoreView 
                            AssignedChore="{Binding Path=.}"/>

                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

        </StackPanel>
        
    </Grid>
</uc:BaseUserControl>
